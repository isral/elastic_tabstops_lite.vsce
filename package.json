{
	"name": "elastic-tabstops-lite",
	"displayName": "Elastic Tabstops Lite",
	"description": "Align by adjust spaces before tab.",
	"version": "1.0.0",
	"icon": "images/icon.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/isral/elastic_tabstops_lite.vsce"
	},
	"publisher": "isral",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onFileSystem:file"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Elastic Tabstops Lite",
				"properties": {
					"elasticTabstopsLite.format.enable": {
						"type": "boolean",
						"default": true,
						"description": "Enable/disable Elastic Tabstops Lite formatter."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"lodash": ">=4.17.21"
	}
}
